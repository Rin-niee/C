// Функция вычисления суммы переменного количества аргументов
double sum(int count, ...) 
{
  double result = 0;
  va_list args;
  va_start(args, count);
  for (int i = 0; i < count; i++) 
    {
        double arg = va_arg(args, double);
        result += arg;
    }
  va_end(args);

  return result;
}

// Функция вычисления максимального значения переменного количества аргументов
double max(int count, ...) 
{
  double result;
  va_list args;
  va_start(args, count);
  result = va_arg(args, double);
  for (int i = 1; i < count; i++) 
    {
        double arg = va_arg(args, double);
        if (arg > result) 
        {
            result = arg;
        }
    }
va_end(args);

return result;
}

// Функция вычисления минимального значения переменного количества аргументов
double min(int count, ...) 
{
  double result;
  va_list args;
  va_start(args, count);
  result = va_arg(args, double);
  for (int i = 1; i < count; i++) 
  {
      double arg = va_arg(args, double);
      if (arg < result) 
      {
          result = arg;
      }
  }
  va_end(args);
  return result;
}

// Функция вычисления среднего арифметического переменного количества аргументов
double average(int count, ...) 
{
  double result = 0;
  va_list args;
  va_start(args, count);
  for (int i = 0; i < count; i++) 
  {
      double arg = va_arg(args, double);
      result += arg;
  }
  va_end(args);
return result / count;
}
