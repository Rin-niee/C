#include <stdio.h>
#include <stdlib.h>
#include <signal.h>

void handler_signal(int signal)
{
    switch(signal)
    {
        case SIGABRT:
            printf("Signal ~SIGABRT~\n");
            break;
        case SIGFPE:
            printf("Signal ~SIGFPE~\n");
            break;
        case SIGILL:
            printf("Signal ~SIGILL~\n");
            break;
        case SIGINT:
            printf("Signal ~SIGINT~\n");
            break;
        case SIGSEGV:
            printf("Signal ~SIGSEGV~\n");
            break;
        case SIGTERM:
            printf("Signal ~SIGTERM~\n");
            break;
        default:
            printf("unrecognized signal\n");
            break;
        
    }
}
int main()
{   signal(SIGABRT, handler_signal);
    signal(SIGFPE, handler_signal);
    signal(SIGILL, handler_signal);
    signal(SIGINT, handler_signal);
    signal(SIGSEGV, handler_signal);
    signal(SIGTERM, handler_signal);
    char f;
    printf("Enter number of signal or exit to break cycle");
    scanf("%s", &f);
    while(1)
    {
        if (f=="exit")
        {
            break;
        }
        else
        {
            f1=atoi(f);
            raise(f);
        }
    }
    return 0;
}
