#include <stdio.h>
#include <stdlib.h>
#include "masss.h"

int main() 
{	int n,i,j,f,x;
	double a,b;
	char k;
	printf("Enter N: \n");
	scanf(" %d", &n);
	
	double *aa;
	a=(double*)malloc(n*n*sizeof(double*));
	printf("%s", "Enter the values separated by a space for mass a: \n");
	for (i=0; i<n; i++)
	{
		for (j=0; j<n; j++)
		{
			printf("a[%d][%d]=",i,j);
    		scanf("%d", (aa+i*n+j));
		}
	}
	double *bb;
	b=(double*)malloc(n*n*sizeof(double*));
	printf("%s", "Enter the values separated by a space for mass b: \n");
	for (i=0; i<n; i++)
	{
		for (j=0; j<n; j++)
		{
			printf("a[%d][%d]=",i,j);
    		scanf("%d", (b+i*n+j));
		}
	}
	printf("%s", "Enter the values separated by a space for mass b: \n");
	for (i=0; i<n; i++)
	{
		for (j=0; j<n; j++)
		{
			printf("b[%d][%d]=",i,j);
    		scanf("%d", &b);
		}
	}
	printf("enter arithmetic sign: \n");
	scanf(" %c", &f);
	if (f = '+')
	{
		x = sum (*aa, *bb, n);
	}
	if (f = '-')
	{
		x = diff(*aa, *bb, n);
	}
	if (f = '-')
	{
		x = prod(*aa, *bb, n);
	}
	printf(" %lf", x);
	freea(a);
	free(bb);
}
