#include "masss.h"

int main() 
{	int n,m,i,j;
	char f;
	printf("Enter N and M: \n");
	scanf("%d %d", &n, &m);
	
	double **aa;
	aa=(double**)malloc(n*sizeof(double*));
	for (i=0;i<m;i++)
	{
		aa[i]=(double*)malloc(m*sizeof(double));
	}
	printf("%s", "Enter the values separated by a space for mass a: \n");
	for (i=0; i<n; i++)
	{
		for (j=0; j<m; j++)
		{
		printf("a[%d][%d]=",i,j);
    	scanf("%lf", &**aa);
		}
	}
	double **bb;
	bb=(double**)malloc(n*sizeof(double*));
	for (i=0;i<m;i++)
	{
		bb[i]=(double*)malloc(m*sizeof(double));
	}
	printf("%s", "Enter the values separated by a space for mass b: \n");
	for (i=0; i<n; i++)
	{
		for (j=0; j<m; j++)
		{
			printf("b[%d][%d]=",i,j);
			scanf("%lf", &**bb);
		}
	}
	printf("enter arithmetic sign: \n");
	scanf(" %c", &f);
	if (f == '+')
	{
		double** x = sum(aa, bb, n,m);
	}
	if (f == '-')
	{
		double** x = diff(aa, bb, n,m);
	}
	if (f == '-')
	{
		double** x = prod(aa, bb, n,m);
	}
	free(aa);
	free(bb);
return 0;
}
