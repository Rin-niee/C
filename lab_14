#include <stdio.h>
#include <setjmp.h>

jmp_buf env;

int counter(int n) 
{   
    int x;
    if (n == 0 || n == 1) 
    {
        return 1;
    }
    else
    {
    return counter(n-1)+counter(n-2);
    }
  x=setjmp(env);   
}
int sumF(int n, int sum)
{
    if (n<=0)
    {
        longjmp(env, 1);
    }
    else
    {
        sum+=counter(n);
        sumF(n-1; sum);
    }
    
}
int main() 
{
int sum, n, i;
sum=0;
printf("Enter number:\n");
scanf(&n);
for(i=0; i<=n; i++)
{
    sum += sumF(n, sum);
}
return 0;
}
