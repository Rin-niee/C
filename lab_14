#include <stdio.h>
#include <setjmp.h>



int counter(int n, int sum) 
{   
    jmp_buf en{0};
    int chis,i;
    if (n == 0 || n == 1) 
    {
        return 1;
    }
    i = setjmp(env);
    if (i == 0) 
    {
        f = counter(n-1, sum);
        longjmp(env, 1);
    }

    sum += chis;
    return chis + counter(n-2, sum);
}

int main() {
int sum = 0;
int n = 10;

printf("Sum of first %d Fibonacci numbers: %d\n", n, fib(n, &sum));

printf("Sum is: %d\n", sum);

return 0;
}
