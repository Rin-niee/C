#include "8lab.h"

int main(int argc, char *argv[]) 
{
	int i,j, n=1000;
	humen hu[1000];
	char a[16];
	FILE* f;
	f = fopen("text1.txt", "r");
	if (f == NULL)
	{
		printf("ERROR!");
	}
	else
	{
		for (i = 0; i<n; i++)
		{
			fscanf(f, "%s %s %d %c %f", hu[i].name, hu[i].lastname, &hu[i].birthyear, &hu[i].gender, &hu[i].height);
		}
		fclose(f);
		printf("sort for(name, lastname, birthyear, gender, height):\n");
		scanf("%s ", &a);
		for (i =0; i<1000; i++)
			{
			printf("Sort %s:\n", a[i]);
			sortarray(hu, n, a[16]);
			}
		for (i=0; i<1000; i++)
		{
			printf("%s %s %d %c %f\n", hu[i].name, hu[i].lastname, &hu[i].birthyear, &hu[i].gender, &hu[i].height);
		}
		}
	return 0;	
}
