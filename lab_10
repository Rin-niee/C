#include <stdio.h>
#define MAX(x, y) ((x) > (y) ? (x) : (y))

int main() 
{
    int n, i, nums[n];
    printf("Enter number of number: ");
    scanf("%d", &n);
    printf("Enter numbers separated by spaces:\n");
    for (i=0; i<n; i++) 
	{
        scanf("%d", &nums[i]);
        fflush(stdin);
    }
    int max = nums[0];
    for (i = 1; i < n; i++) 
	{
       max = MAX(max, nums[i]);
    }
    printf("the maximum number is: %d\n", max);
    return 0;
}
