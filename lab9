#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int is_digit(char c) 
{ 
return isdigit(c)==1; 
}

int main() 
{ 	char prim[90];
	char prob[10]=" ";
	char *res;
	int flag;
	double result;
	result=0;
	printf("Enter an example: \n");
	fgets(prim, 90, stdin);
	res = strtok(prim,prob);
	while (res!=NULL)
	{
		flag =0;
		if (strcmp(res, "+") == 0)
		{
			flag = 1;
		}
		if (strcmp(res, "-") == 0)
		{
			flag = 2;
		}
		else if (isdigit(res[0]))
        {
            if (flag == 1)
            {
                result += atof(res);
            }
            if (flag == 2)
            {
                result -= atof(res);
            }
        }
        res = strtok(NULL, prob);
    }
    printf("Result is: %lf", result);
    return 0; 
}
