#include <stdio.h>
#include <stdlib.h>

typedef struct
{
	char lastname[60];
	char name[60];
	int birthyear;
	char gender[60];
	float height; 
} human;

void sortarray(human* humens, int n, char a[])
 {
 	human h;
 	int i, j, c;
 	c=0;
 	for (i=0; i<n; i++)
 	{
 		for (j=0; j<n; j++)
	 	{
	 		if (strcmp(a, "name")==0)
	 		{
	 			c= strcmp(humens[i].name, humens[j].name);
			}
			if (strcmp(a, "lastname")==0)
	 		{
	 			c= strcmp(humens[i].lastname, humens[j].lastname);
			}
			if (strcmp(a, "year")==0)
	 		{
	 			c = humens[i].birthyear- humens[j].birthyear;
			}
			if (strcmp(a, "gender")==0)
	 		{
	 			c= strcmp(humens[i].gender, humens[j].gender);
			}
			if (strcmp(a, "height")==0)
	 		{
	 			c = humens[i].height - humens[j].height;
			}
			if (c>0)
			{
				h = humens[i];
				humens[i]=humens[j];
				humens[j]=h;
			}
			else if(c=0)
			{
				printf("Enter more detail");
				scanf("%s ", a);
			}
		}
	}
}
