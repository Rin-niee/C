#include <stdio.h> 
#include <stdlib.h> 
#include <string.h>

int is_digit(char c) 
{ 
	return (c >= '0' && c <= '9'); 
}
double eval(char *expr) 
{ 
	char *token; 
	double result = 0, num = 0; 
	char op = '+';
	token = strtok(expr, " "); 
	while (token != NULL) 
	{  
		if (is_digit(token[0])) 
		{ 
		num = atof(token); 
		if (op == '+') 
		{ 
			result += num; 
		} 
		else if (op == '-') 
		{ 
			result -= num; 
		} 
		} 
		else 
		{ 
			op = token[0]; 
		} 
		token = strtok(NULL, " "); 
	} 
	return result; 
}
int main() 
{ 	char expr[100];
	 printf(": "); 
	 fgets(expr, sizeof(expr), stdin);  
	 if (expr[strlen(expr)-1] == '\n') 
	 { 
	 	expr[strlen(expr)-1] = '\0'; 
	 }  
	 double result = eval(expr);  
	 printf(": %g\n", result); 
	 return 0; 
}
